{
    "private": true,
    "name": "ui-root",
    "version": "1.0.0",
    "main": "apps/src/entry.js",
    "module": "apps/src/entry.js",
    "license": "MIT",
    "scripts": {
        "start": "webpack-dev-server --progress --open --config packages/webpack-config/webpack.config.dev.js --env.slice",
        "start:dist": "node web-server/server.js",
        "build": "webpack --env.production --config packages/webpack-config/webpack.config.prod.js --env.slice",
        "build:dev": "webpack --config packages/webpack-config/webpack.config.prod.js --env.slice",
        "start:all": "lerna run start --parallel",
        "build:all": "lerna run build",
        "test:all": "lerna run test",
        "lint:all": "eslint '**/**/src/**/*.js' --fix --ignore-pattern node_modules",
        "build:prod": "yarn test:all && yarn build:all && webpack --env.production --config packages/webpack-config/webpack.config.prod.js"
    },
    "workspaces": [
        "packages/*",
        "slices/*"
    ],
    "dependencies": {
        "axios": "^0.19.2",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
        "@babel/preset-env": "^7.9.5",
        "@babel/preset-react": "^7.9.4",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-styled-components": "^1.10.7",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
        "babel-polyfill": "^6.26.0",
        "clean-webpack-plugin": "^3.0.0",
        "commitizen": "^4.0.4",
        "cross-env": "^7.0.2",
        "css-loader": "^3.5.2",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.1",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.2.0",
        "husky": "^4.2.5",
        "lerna": "^3.20.2",
        "lint-staged": "^10.1.7",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.1",
        "prettier": "^2.0.5",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.1.4",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3",
        "webpack-manifest-plugin": "^2.2.0",
        "webpack-merge": "^4.2.2"
    },
    "lint-staged": {
        "**/**/src/**/*.js": [
            "yarn lint:all",
            "yarn jest --bail --findRelatedTests",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
